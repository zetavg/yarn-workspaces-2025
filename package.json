{
  "name": "@yarn-workspaces-2025/workspace-root",
  "private": true,
  "packageManager": "yarn@4.5.0",
  "workspaces": [
    "configs/*",
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "foreach": "FORCE_COLOR=true yarn workspaces foreach --all --exclude . -vv",
    "foreach-topological": "yarn foreach --topological",
    "foreach-parallel": "yarn foreach --parallel",
    "lint": "yarn foreach-parallel run lint",
    "typecheck": "yarn foreach-parallel run typecheck",
    "test": "yarn foreach-parallel run test",
    "build:types": "yarn foreach-topological run build:types",
    "build": "yarn foreach-topological run build",
    "clean": "yarn foreach-parallel run clean",
    "set-version": "PACKAGES_VERSION=$0 yarn constraints --fix",
    "pack-packages": "yarn foreach-parallel run pack-package",
    "publish-packed-packages": "yarn foreach-parallel run publish-packed-package"
  },
  "dependencies": {
    "@yarnpkg/types": "^4"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@yarn-workspaces-2025/eslint-config": "workspace:^",
    "eslint": "^9",
    "prettier": "^3",
    "semver": ">=7",
    "typescript": "~5.8"
  }
}
